@model List<Customer>
@{

	string title = "Customer " + ViewBag.Action;
	ViewData["Title"] = title;

}

<h1>@ViewBag.Title</h1>

<div class="p-0">
	<table class="table table-striped table-bordered">
		<thead>
			<tr><th>Name</th><th>Email</th><th>City</th><th></th><th></th></tr>
		</thead>
		<tbody>
			@foreach (var customer in Model)
			{
				<tr>
					<td>@customer.FullName</td>
					<td>@customer.Email</td>
					<td>@customer.City</td>
					<td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerID" asp-route-slug="@customer.Slug" class="btn btn-primary">Edit</a></td>
					<td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerID" asp-route-slug="@customer.Slug" class="btn btn-primary">Delete</a></td>
				</tr>
			}

		</tbody>
	</table>
	<a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add</a>

</div>
