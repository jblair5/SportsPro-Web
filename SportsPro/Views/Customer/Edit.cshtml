@model Customer
@{
	ViewBag.Title = ViewBag.Action + " Customer";

}
@section scripts {
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="row mb-3">
		<div class="col-md-2">
			<label class="form-label">First Name:</label>
		</div>
		<div class="col-md-4">
			<input asp-for="FirstName" class="form-control" />
		</div>
		<div class="col-md-6">
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2">
			<label class="form-label">Last Name:</label>
		</div><div class="col-md-4"><input asp-for="LastName" class="form-control" /></div>
		<div class="col-md-6"><span asp-validation-for="LastName" class="text-danger"></span></div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2"><label class="form-label">Address:</label></div>
		<div class="col-md-4"><input asp-for="Address" class="form-control" /></div>
		<div class="col-md-6"><span asp-validation-for="Address" class="text-danger"></span></div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2">
			<label class="form-label">City:</label>
		</div><div class="col-md-4"><input asp-for="City" class="form-control" /></div>
		<div class="col-md-6"><span asp-validation-for="City" class="text-danger"></span></div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2"><label class="form-label">State:</label></div>
		<div class="col-md-4"><input asp-for="State" class="form-control" /></div>
		<div class="col-md-6"><span asp-validation-for="State" class="text-danger"></span></div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2"><label class="form-label">Postal Code:</label></div>
		<div class="col-md-4"><input asp-for="PostalCode" class="form-control" /></div>
		<div class="col-md-6"><span asp-validation-for="PostalCode" class="text-danger"></span></div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2"><label class="form-label">Country:</label></div>
		<div class="col-md-4">
			<select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.Countries, "CountryID", "Name"))" class="form-select">
				<option value="wrong">Select a Country...</option>
			</select>
		</div>
		<div class="col-md-6"><span asp-validation-for="CountryID" class="text-danger"></span></div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2"><label class="form-label">Email:</label></div>
		<div class="col-md-4"><input asp-for="Email" class="form-control" /></div>
		<div class="col-md-6"><span asp-validation-for="Email" class="text-danger"></span></div>


	</div>

	<div class="row mb-3">
		<div class="col-md-2"><label class="form-label">Phone:</label></div>
		<div class="col-md-4"><input asp-for="Phone" class="form-control" /></div>
		<div class="col-md-6"><span asp-validation-for="Phone" class="text-danger"></span></div>


	</div>

	<input type="hidden" asp-for="FullName" />
	<input type="hidden" asp-for="CustomerID" />

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Customer" asp-action="List" class="btn btn-primary">Cancel</a>

</form>
