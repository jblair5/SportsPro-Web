@model TechnicianViewModel
@{

	ViewBag.Title = "Incidents For Technician";

}

<h1>Technician: @Model.Technician.Name</h1>
<h1>Assigned/Open Incidents</h1>

<table class="table table-striped table-bordered">
	<thead>
		<tr class="fw-bold">
			<td>Title</td>
			<td>Customer</td>
			<td>Product</td>
			<td>Date Opened</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		@foreach (Incident i in Model.Incidents)
		{
			<tr>
				<td>@i.Title</td>
				<td>@i.Customer.FullName.ToString()</td>
				<td>@i.Product.Name.ToString()</td>
				<td>@i.DateOpened</td>
				<td><a class="btn btn-primary" asp-action="Edit" asp-controller="TechIncident" asp-route-id="@i.IncidentID">Edit</a></td>
			</tr>

		}
	</tbody>
</table>
<a asp-controller="TechIncident" asp-action="Switch" class="btn btn-primary">Switch Technician</a>