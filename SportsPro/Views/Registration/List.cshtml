@model Customer
@{

	ViewBag.Title = "Registration";


}

<div>
	<h2>Customer: @Model.FullName</h2>
	<h2>Registrations</h2>

	@if (TempData.Keys.Contains("Error")) 
	{
		<div class="mt-3 mb-3 text-danger" >@TempData["Error"]</div> 
	}
	<table class="table table-striped table-bordered rounded">
		<thead>
			<tr><th>Product</th><th></th></tr>
		</thead>
		<tbody>
			@foreach (Product p in Model.Products)
			{
				<tr><td>@p.Name</td><td><a asp-route-pid="@p.ProductID" asp-route-cid="@Model.CustomerID" asp-action="Delete" class="btn btn-primary">Delete</a></td></tr>
			}

		</tbody>

	</table>

	<h2>Product</h2>
	<form asp-action="Add">
		<select name="id" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name"))" class="form-select">
			<option>Select a Product...</option>
		</select>
		<input type="hidden" asp-for="CustomerID" />
		<button type="submit" class="btn btn-primary mt-2">Register</button>
	</form>
</div>
